   <div>
       <br>
       <div class="container mt-4">
           <div class="card border-secondary">
               <div class="card-header"> CREAR NUEVA PROPUESTA</div>
               <div class="card-body">
                   <form action="/createpropuesta" method="post">
                        <div class="mb-3">
                        <div class="form-group row">
                            <label for="text" class="col-sm-2 col-form-label">Nombre</label>
                            <div class="col-sm-10">
                              <input type="text" class="form-control" id="nombre" name="nombre" tabindex="4" style="width: 145px;">
                            </div>
                        </div>
                        </div>

                        <div class="mb-3">
                        <div class="form-group row">
                            <label for="text" class="col-sm-2 col-form-label">Descripción</label>
                            <div class="col-sm-10">
                              <input type="text" maxlength="130" class="form-control" id="concepto" name="concepto" tabindex="5" style="width: 600px; height: 150px;">
                            </div>
                          </div>
                        </div>
                        
                        <div class="mb-3">
                          <div class="form-group row">
                              <label for="text" class="col-sm-2 col-form-label">Nombre cliente</label>
                              <div class="col-sm-10">
                                  <select v-model="cliente" class="form-control" id="idcliente" name="idcliente" tabindex="3" style="width: 150px; height: 45px;">
                                    <% results.forEach((results)=>{%>
                                      <tr>                                        
                                        <option <%= results.idcliente%> value="<%= results.idcliente%>"><th><%= results.name%></th></option>
                                      </tr>
                                    <%});%>
                                  </select>
                                </div>
                            </div>
                          </div> 

                        </div>
                        <div class="mb-3">
                        <div class="form-group row">
                          <div class="col-sm-10">
                            <button type="submit" class="btn btn-outline-primary" aling="center" style="position: absolute; top: 350px; left: 45%; transform: translate(-50%,-50%)" > Inscribir</button>
                            <a href="/propuesta" class="btn btn-outline-danger" aling="center" style="position: absolute; top: 350px; left: 59%; transform: translate(-50%,-50%)" >Cancelar</a>
                            <br>
                          </div>
                        </div>
                      </div>
                      </div>
                   </form>

               </div>
           </div>
       </div>
