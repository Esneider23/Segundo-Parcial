        </div>
    </nav>
    <div>
        <div>
            <div aling="center">
                <img src='./imagenes/campus.jpg'  style="width: 100%; height: auto;"></img>
                <div class="container p-2 bg-info text-white texto-encima" align="center" style="position: absolute; top: auto; left: 50%; transform: translate(-50%,-460%); border-radius: 60px; width: 25cm;">
                    <div class="container" align="center"><h3>Proyectos</h3>
                    </div>
                </div>
            </div>
            <br></br>
            <h1 align="center">Proyectos</h1>
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col"> Codigo </th>
                        <th scope="col"> Nombre </th>
                        <th scope="col"> Descripción</th>
                        <th scope="col"> Presupuesto</th>
                        <th scope="col"> Estado</th>
                        <th scope="col"> Cliente</th>                   
                    </tr>
                </thead>
                <tbody>
                  <% results.forEach((results)=>{%>
                    <tr>
                      <th><%= results.idproyecto %></th>
                      <th><%= results.nombre%></th>
                      <th><%= results.descripcion%></th>
                      <th><label>$</label><%= results.presupuesto %></th>
                      <th><%= results.nomb %></th>
                      <th><%= results.name %></th>
                    </tr>
                  <%});%>
                </tbody>
            </table>
        </div>
        <footer class="page-footer font-small bg-info">                
            <div class="footer-copyright text-center py-3">© 2020 Copyright:
                <a href="https://www.utb.edu.co"> utb.edu.co</a>
            </div>
        </footer>
</div>
